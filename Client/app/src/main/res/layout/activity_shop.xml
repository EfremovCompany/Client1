<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="efremov.domoffon.storeadmin.ShopActivity">



    <ProgressBar
        android:id="@+id/reg_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="67dp"
        android:text="Информация о заказах"
        android:onClick="btnClickInfo"
        android:id="@+id/btnInfo"
        android:layout_alignParentTop="true">
    </Button>

    <ScrollView
        android:id="@+id/reg_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/email_reg_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    </ScrollView>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="391dp"
        android:id="@+id/list"
        android:choiceMode="singleChoice"
        android:layout_alignBottom="@+id/reg_form"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnInfo"></ListView>
</RelativeLayout>
